<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tuananhle.movingcompany">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE">
    </uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OrdersActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        android:name=".ServiceTypesActivity"
        android:label="@string/title_activity_service_types"
        android:parentActivityName=".OrdersActivity"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.tuananhle.movingcompany.OrdersActivity" />
        </activity>
        <activity
            android:name=".ServiceTypeActivity"
            android:parentActivityName=".ServiceTypesActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tuananhle.movingcompany.ServiceTypesActivity" />
        </activity>
        <activity
            android:name=".CustomerActivity"
            android:parentActivityName=".OrdersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tuananhle.movingcompany.OrdersActivity" />
        </activity>

        <activity
            android:name=".CustomActivity"
            android:parentActivityName=".CustomerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tuananhle.movingcompany.CustomerActivity" />
        </activity>


        <activity
            android:name=".NewOrderActivity"
            android:parentActivityName=".OrdersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tuananhle.movingcompany.OrdersActivity" />
        </activity>

        <activity
            android:name=".EditCustomerActivity"
            android:parentActivityName=".CustomerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tuananhle.movingcompany.CustomerActivity" />
        </activity>
    </application>

</manifest>